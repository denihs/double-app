{
  "name": "double-app",
  "private": true,
  "scripts": {
    "start": "MONGO_URL=mongodb://localhost:27017/double-app meteor --settings private/env/prod/settings.json -p 4000",
    "start-api": "MONGO_URL=mongodb://localhost:27017/double-app meteor --settings private/env/prod/api-settings.json -p 5000",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "meteor-node-stubs": "^1.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "@material-ui/styles": "^4.3.0"
  },
  "devDependencies": {
    "@material-ui/core": "^4.11.3",
    "prettier-eslint": "^8.8.2"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  }
}
